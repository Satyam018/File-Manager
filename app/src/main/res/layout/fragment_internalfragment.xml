<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Internalfragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="14dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/internalfragmentbackimg"
            android:src="@drawable/ic_baseline_arrow_drop_down_circle_24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/internalfragmnetfilepath"
            android:text="FIle Path"
            android:textSize="15dp"
            android:fontFamily="serif"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:id="@+id/internalfragmentrecyclerview"/>



</LinearLayout>